<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".views.StartGameActivity">

    <Button
        android:id="@+id/button_single_player"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:keepScreenOn="true"
        android:padding="@dimen/padding_10dp"
        android:text="@string/single_player"
        android:textColor="@color/button_text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_how_to_play"
        app:layout_constraintEnd_toEndOf="@+id/button_how_to_play"
        app:layout_constraintStart_toStartOf="@+id/button_how_to_play"
        />

    <Button
        android:id="@+id/button_how_to_play"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_single_player"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:keepScreenOn="true"
        android:padding="@dimen/padding_10dp"
        android:text="@string/how_to_play"
        android:textColor="@color/button_text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_single_player"
     />

</androidx.constraintlayout.widget.ConstraintLayout>